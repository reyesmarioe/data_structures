CC = gcc # C compiler
CFLAGS = -fPIC -Wall -Wextra -O2 -g # C flags
LDFLAGS = # linking flags
RM = rm -f  # rm command
TARGET_LIB = libqueue.a # target lib

SRCS = src/queue.cpp # source files
OBJS = $(SRCS:.c=.o)
INCLUDE                = -Iinc
CPPFLAGS      += $(INCLUDE)

.PHONY: all
all: ${TARGET_LIB}

$(TARGET_LIB): $(OBJS)
	ar rcs libqueue.a src/queue.o

$(SRCS:.cpp=.d):%.d:%.cpp
	$(CC) $(CFLAGS) $(CPPFLAGS) -MM $< >$@

include $(SRCS:.cpp=.d)

.PHONY: clean
clean:
	-${RM} ${TARGET_LIB} ${OBJS} $(SRCS:.cpp=.d)
